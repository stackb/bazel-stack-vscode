{
    "name": "bazel-stack-vscode",
    "displayName": "bazel-stack-vscode",
    "description": "Bazel Support for Visual Studio Code",
    "version": "0.8.0",
    "publisher": "StackBuild",
    "license": "Apache-2.0",
    "icon": "stackb-full.png",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/stackb/bazel-stack-vscode.git"
    },
    "keywords": [
        "bazel"
    ],
    "author": "stack.build authors",
    "bugs": {
        "url": "https://github.com/stackb/bazel-stack-vscode/issues"
    },
    "homepage": "https://github.com/stackb/bazel-stack-vscode#readme",
    "categories": [
        "Programming Languages",
        "Snippets"
    ],
    "activationEvents": [
        "onUri",
        "onCommand:bsv.openExtensionSetting",
        "onCommand:workbench.view.extension.bazel-explorer",
        "bsv.bazel.copyToClipboard",
        "bsv.bazel.build",
        "bsv.bazel.test",
        "bsv.bazel.debugBuild",
        "bsv.bazel.debugTest",
        "bsv.bazel.buildEvents",
        "bsv.bazel.testEvents",
        "bsv.bazel.codesearch",
        "bsv.bazel.codesearch.search",
        "bsv.bazel.codesearch.index",
        "bsv.bazel.ui",
        "onLanguage:bazel",
        "onLanguage:bazelrc",
        "onLanguage:starlark",
        "onView:bazel-explorer",
        "onView:bsv.bazel.workspace",
        "onView:bsv.bazel.invocation"
    ],
    "engines": {
        "vscode": "^1.45.0"
    },
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Bzl",
            "properties": {
                "bsv.bazel.bzl.downloadBaseUrl": {
                    "type": "string",
                    "default": "https://get.bzl.io",
                    "description": "Base URL for bzl downloads"
                },
                "bsv.bazel.bzl.release": {
                    "type": "string",
                    "default": "v0.9.12",
                    "description": "Bzl release version"
                },
                "bsv.bazel.bzl.executable": {
                    "type": "string",
                    "default": "/Users/i868039/go/src/github.com/stackb/bezel/bazel-out/darwin-fastbuild-ST-3891b650e255/bin/cmd/bzl/bzl_/bzl",
                    "description": "Path to a bzl executable\n\n> if set, this prevents downloading a bzl binary from the baseURL location"
                },
                "bsv.bazel.bzl.command": {
                    "type": "array",
                    "description": "The command (and optional arguments) to start the lsp server.",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "lsp",
                        "serve",
                        "--log_level=info"
                    ]
                },
                "bsv.bazel.executable": {
                    "type": "string",
                    "default": "bazel",
                    "description": "Path to the bazel executable"
                },
                "bsv.bazel.buildFlags": {
                    "type": "array",
                    "description": "Flags to use for the build command.",
                    "items": {
                        "type": "string"
                    },
                    "default": []
                },
                "bsv.bazel.testFlags": {
                    "type": "array",
                    "description": "Flags to use for the test command.",
                    "items": {
                        "type": "string"
                    },
                    "default": []
                },
                "bsv.bazel.starlarkDebuggerFlags": {
                    "type": "array",
                    "description": "Flags to use for the starlark debugger.",
                    "items": {
                        "type": "string"
                    },
                    "default": [
                        "--experimental_skylark_debug",
                        "--experimental_skylark_debug_server_port=7300",
                        "--experimental_skylark_debug_verbose_logging=true",
                        "--nouse_action_cache",
                        "--cache_test_results=no"
                    ]
                },
                "bsv.bazel.codelens.codesearch.enabled": {
                    "type": "boolean",
                    "description": "Flag to enable bazel codesearch codelens",
                    "default": true
                },
                "bsv.bazel.codelens.bep.enabled": {
                    "type": "boolean",
                    "description": "Flag to enable bazel build event protocol codelens.  If this is enabled, build/test invocations will show build event protocol details.  If disabled, builds will be invoked in a vscode terminal",
                    "default": true
                },
                "bsv.bazel.codelens.ui.enabled": {
                    "type": "boolean",
                    "description": "Flag to enable bazel UI codelens",
                    "default": true
                },
                "bsv.bazel.codelens.debugStarlark.enabled": {
                    "type": "boolean",
                    "description": "Flag to enable bazel starlark debug codelens",
                    "default": true
                },
                "bsv.bazel.codelens.enabled": {
                    "type": "boolean",
                    "description": "Flag to enable bazel codelenses",
                    "default": true
                },
                "bsv.bazel.account.server.address": {
                    "type": "string",
                    "default": "accounts.bzl.io:443",
                    "description": "Address of the stack.build account server"
                },
                "bsv.bazel.account.token": {
                    "type": "string",
                    "description": "Identity token for accounts.bzl.io"
                },
                "bsv.buildifier.github-release": {
                    "type": "string",
                    "default": "4.0.1",
                    "description": "The github release tag of the Buildifier release to download"
                },
                "bsv.buildifier.github-owner": {
                    "type": "string",
                    "default": "bazelbuild",
                    "description": "The github owner for the buildifier repository"
                },
                "bsv.buildifier.github-repo": {
                    "type": "string",
                    "default": "buildtools",
                    "description": "The github repo name for the buildifier repository"
                },
                "bsv.buildifier.executable": {
                    "type": "string",
                    "description": "Path to a pre-installed buildifier executable\n\n> if set, this prevents downloading a buildifier binary from github"
                },
                "bsv.buildifier.fix-on-format": {
                    "type": "boolean",
                    "default": true,
                    "description": "Whether to automatically apply lint fixes from buildifier when formatting a Bazel file."
                },
                "bsv.bazeldoc.base-url": {
                    "type": "string",
                    "default": "https://docs.bazel.build/versions/master",
                    "description": "The base-url of the documentation site"
                }
            }
        },
        "taskDefinitions": [],
        "commands": [
            {
                "category": "Bzl",
                "command": "bsv.starlark.lsp.copyLabel",
                "title": "Bazel: Copy label to clipboard",
                "icon": "$(clippy)"
            },
            {
                "category": "Bazel",
                "command": "bsv.bazel.redo",
                "title": "Bazel: Redo Last Bazel Invocation",
                "icon": "$(redo)"
            },
            {
                "category": "Bazel",
                "command": "bsv.bazel.kill",
                "title": "Bazel: Send Kill Signal to Bazel Server",
                "icon": "$(trash)"
            },
            {
                "category": "Bazel",
                "command": "bsv.bazel.openTerminal",
                "title": "Bazel: Open bazel directory in terminal",
                "icon": "$(terminal)"
            },
            {
                "category": "Bazel",
                "command": "bsv.bazel.workspace.refresh",
                "title": "Refresh Bazel Workspace",
                "icon": "$(refresh)"
            },
            {
                "category": "Bazel",
                "command": "bsv.bazel.invocation.refresh",
                "title": "Refresh Bazel Invocation",
                "icon": "$(refresh)"
            },
            {
                "category": "Bazel",
                "command": "bsv.bzl.signin",
                "title": "Sign Up for Bzl Service",
                "icon": "$(sign-in)"
            }
        ],
        "keybindings": [
            {
                "command": "bsv.bazel.redo",
                "key": "shift+cmd+space"
            },
            {
                "command": "bzv.bzl.codesearch.search",
                "key": "ctrl+shift+cmd+f"
            },
            {
                "command": "bzv.bzl.codesearch.index",
                "key": "ctrl+shift+cmd+i"
            },
            {
                "command": "bsv.starlark.lsp.copyLabel",
                "key": "ctrl+shift+cmd+b"
            },
            {
                "command": "workbench.view.extension.bazel-explorer",
                "key": "shift+cmd+t",
                "title": "Reveal Bazel Explorer"
            }
        ],
        "menus": {
            "commandPalette": [],
            "view/title": [
                {
                    "command": "bsv.bazel.workspace.refresh",
                    "when": "view == bsv.bazel.workspace"
                },
                {
                    "command": "bsv.bazel.invocation.refresh",
                    "when": "view == bsv.bazel.invocation"
                }
            ],
            "view/item/context": [
                {
                    "command": "bsv.bazel.workspace.refresh",
                    "when": "view == bsv.bazel.workspace && viewItem == bazel_info",
                    "group": "inline@0"
                },
                {
                    "command": "bsv.bazel.openTerminal",
                    "when": "view == bsv.bazel.workspace && viewItem == server_path",
                    "group": "inline@0"
                },
                {
                    "command": "bsv.bazel.kill",
                    "when": "view == bsv.bazel.workspace && viewItem == server_pid",
                    "group": "inline@0"
                }
            ],
            "editor/context": [
                {
                    "command": "bsv.starlark.lsp.copyLabel",
                    "group": "starlark",
                    "when": "editorTextFocus && editorLangId == bazel"
                }
            ]
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "bazel-explorer",
                    "title": "Bazel",
                    "icon": "media/bazel-wireframe.svg"
                }
            ]
        },
        "viewsWelcome": [
            {
                "view": "bsv.bazel.invocation",
                "contents": "Awaiting next build invocation."
            },
            {
                "view": "bsv.bazel.workspace",
                "when": "bsv.bazel.workspace.status == WORKSPACE_NOT_FOUND",
                "contents": "WORKSPACE file not found.  Please open vscode within a bazel repository."
            },
            {
                "view": "bsv.bazel.workspace",
                "when": "bsv.bazel.workspace.status == LOADING",
                "contents": "Loading..."
            },
            {
                "view": "bsv.bazel.workspace",
                "when": "bsv.bazel.workspace.status == LOADING_ERROR",
                "contents": "Bazel workspace could not be loaded.  Please ensure that a WORKSPACE file is present and 'bazel info' returns normally."
            },
            {
                "view": "bsv.bazel.workspace",
                "when": "bsv.bazel.workspace.status == LOADED",
                "contents": "[Refresh](command:bsv.bazel.workspace.refresh)\n\nClick to refresh bazel info."
            }
        ],
        "views": {
            "bazel-explorer": [
                {
                    "id": "bsv.bazel.workspace",
                    "name": "Default Workspace",
                    "icon": "media/bazel-wireframe.svg",
                    "contextualTitle": "Current default bazel workspace"
                },
                {
                    "id": "bsv.bazel.invocation",
                    "name": "Invocation",
                    "icon": "media/bazel-wireframe.svg",
                    "contextualTitle": "Last bazel invocation"
                }
            ]
        },
        "grammars": [
            {
                "language": "starlark",
                "scopeName": "source.starlark",
                "path": "./syntaxes/starlark.tmLanguage.json"
            },
            {
                "language": "bazel",
                "scopeName": "source.bazel",
                "path": "./syntaxes/bazel.tmLanguage.json"
            },
            {
                "language": "bazelrc",
                "scopeName": "source.bazelrc",
                "path": "./syntaxes/bazelrc.tmLanguage.json"
            }
        ],
        "languages": [
            {
                "id": "starlark",
                "aliases": [
                    "Starlark",
                    "starlark"
                ],
                "extensions": [
                    ".sky",
                    ".star"
                ],
                "configuration": "./syntaxes/starlark.configuration.json"
            },
            {
                "id": "bazel",
                "aliases": [
                    "Bazel"
                ],
                "extensions": [
                    ".BUILD",
                    ".bazel",
                    ".WORKSPACE",
                    ".bzl"
                ],
                "filenames": [
                    "BUILD",
                    "BUILD.bazel",
                    "WORKSPACE",
                    "WORKSPACE.bazel"
                ],
                "configuration": "./syntaxes/bazel.configuration.json"
            },
            {
                "id": "bazelrc",
                "aliases": [
                    "Bazelrc"
                ],
                "extensions": [
                    ".bazelrc"
                ],
                "filenames": [
                    "bazelrc"
                ],
                "configuration": "./syntaxes/bazelrc.configuration.json"
            }
        ],
        "snippets": [
            {
                "language": "bazel",
                "path": "./snippets/bazel.json"
            }
        ]
    },
    "main": "./out/extension.js",
    "scripts": {
        "clean": "rimraf out/",
        "fmt": "prettier --write \"src/**/*.ts\"&& npm run test -- --fix",
        "genproto": "node ./node_modules/@grpc/proto-loader/build/bin/proto-loader-gen-types.js --defaults --oneofs --verbose --includeComments -O ./src/proto --grpcLib @grpc/grpc-js proto/*.proto",
        "compile": "tsc -p ./",
        "watch": "tsc -watch -p ./",
        "lint": "eslint src --ext ts --ignore-pattern 'src/proto/**/*.ts' --fix",
        "pretest": "npm run compile && npm run lint",
        "test": "node ./out/test/runTest.js",
        "vscode-install": "npm run vscode-package && code --install-extension out/extension.vsix",
        "vscode-uninstall": "code --uninstall-extension out/extension.vsix",
        "vscode-package": "vsce package --out out/extension.vsix",
        "vscode:prepublish": "npm run clean && npm run compile"
    },
    "extensionDependencies": [
        "mindaro-dev.file-downloader"
    ],
    "dependencies": {
        "@grpc/grpc-js": "^1.3.3",
        "@grpc/proto-loader": "0.6.0-pre17",
        "@microsoft/vscode-file-downloader-api": "^1.0.1",
        "@octokit/rest": "18.0.3",
        "bazel-stack-vscode-api": "^1.2.2",
        "chokidar": "^3.5.1",
        "filesize": "6.1.0",
        "fs-extra": "9.0.1",
        "graceful-fs": "4.2.4",
        "luxon": "1.24.1",
        "mv": "^2.1.1",
        "portfinder": "1.0.28",
        "protobufjs": "6.10.1",
        "request": "2.88.2",
        "semver": "7.3.5",
        "sha256-file": "1.0.0",
        "shiki": "^0.2.6",
        "shiki-themes": "^0.2.6",
        "strip-ansi": "^6.0.0",
        "tmp": "0.2.1",
        "uuid": "8.3.0",
        "vscode-common": "1.50.0",
        "vscode-extension-telemetry": "^0.1.6",
        "vscode-languageclient": "7.0.0",
        "vscode-languageserver-protocol": "3.16.0"
    },
    "devDependencies": {
        "@octokit/types": "5.2.0",
        "@types/chai-string": "1.4.2",
        "@types/chai": "4.2.12",
        "@types/filesize": "5.0.0",
        "@types/fs-extra": "9.0.1",
        "@types/glob": "^7.1.1",
        "@types/graceful-fs": "4.1.2",
        "@types/luxon": "1.24.3",
        "@types/mocha": "^7.0.2",
        "@types/mv": "2.1.0",
        "@types/node": "^13.11.0",
        "@types/request": "2.48.5",
        "@types/semver": "5.5.0",
        "@types/sha256-file": "1.0.0",
        "@types/sinon": "9.0.4",
        "@types/strip-ansi": "5.2.1",
        "@types/tmp": "0.2.0",
        "@types/uuid": "8.3.0",
        "@types/vscode": "^1.45.0",
        "@typescript-eslint/eslint-plugin": "^2.30.0",
        "@typescript-eslint/parser": "^2.30.0",
        "chai-string": "1.5.0",
        "chai": "4.2.0",
        "eslint": "^6.8.0",
        "glob": "^7.1.6",
        "mocha": "^7.1.2",
        "prettier": "^2.2.1",
        "rimraf": "3.0.2",
        "sinon": "9.0.2",
        "ts-loader": "^8.0.4",
        "typescript": "^3.8.3",
        "vsce": "1.93.0",
        "vscode-test": "^1.3.0"
    },
    "prettier": {
        "printWidth": 100,
        "singleQuote": true,
        "tabWidth": 2,
        "arrowParens": "avoid"
    }
}
